/dts-v1/;

#include "sun8i-h3-sinh3-core.dtsi"
#include <dt-bindings/input/input.h>

/ {
	model = "Tigro GX";
	compatible = "victronenergy,tigro-gx",
		     "sinlinx,sinh3-core",
		     "allwinner,sun8i-h3";

	aliases {
		ethernet0 = &emac;
		hwmon0 = &cpu_thermal;
		i2c0 = &i2c0;
		i2c1 = &i2c1;
		i2c2 = &i2c2;
		mmc0 = &mmc0;
		mmc1 = &mmc2;
		nvmem0 = &board_id;
		rtc0 = &ext_rtc;
		rtc1 = &rtc;
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
		serial3 = &r_uart;
		usb-serial0 = &usb_serial0;
		usb-serial1 = &usb_serial1;
		watchdog0 = &ext_wdt;
		watchdog1 = &wdt0;
	};

	hdmi-connector {
		compatible = "hdmi-connector";
		type = "a";
		ddc-i2c-bus = <&i2c2>;

		port {
			hdmi_con_in: endpoint {
				remote-endpoint = <&hdmi_out_con>;
			};
		};
	};

	button {
		compatible = "gpio-keys";

		button {
			linux,code = <KEY_CONFIG>;
			gpios = <&pio 0 2 GPIO_ACTIVE_LOW>; /* PA2 */
		};
	};

	leds {
		compatible = "gpio-leds";

		led-bluetooth {
			label = "bluetooth";
			gpios = <&pio 4 2 GPIO_ACTIVE_HIGH>;	/* PE2 */
			default-state = "off";
		};

		led-status-orange {
			label = "status-orange";
			gpios = <&pio 4 9 GPIO_ACTIVE_HIGH>;	/* PE9 */
			linux,default-trigger = "blink-slow";
		};

		led-status-green {
			label = "status-green";
			gpios = <&pio 4 11 GPIO_ACTIVE_HIGH>;	/* PE11 */
			default-state = "off";
		};
	};

	buzzer {
		compatible = "pwm-beeper";
		pwms = <&r_pwm 0 1000000 0>;
	};

	ext_wdt: watchdog {
		compatible = "linux,wdt-gpio";
		gpios = <&pio 4 7 GPIO_ACTIVE_HIGH>; /* PE7 */
		hw_algo = "toggle";
		hw_margin_ms = <30000>;
		always-running;
	};

	can_clk: can-clk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <40000000>;
	};

	/* External USB connectors */
	reg_usb0_vbus: usb0-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb0-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
		gpio = <&pio 6 13 GPIO_ACTIVE_HIGH>; /* PG13 */
	};

	/* Dual UART */
	reg_usb2_vbus: usb2-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb2-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
		gpio = <&pio 6 5 GPIO_ACTIVE_HIGH>; /* PG5 */
	};

	/* Wifi */
	reg_usb3_vbus: usb3-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb3-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
		gpio = <&pio 0 7 GPIO_ACTIVE_HIGH>; /* PA7 */
	};
};

&de {
	status = "okay";
};

&hdmi {
	status = "okay";
};

&hdmi_out {
	hdmi_out_con: endpoint {
		remote-endpoint = <&hdmi_con_in>;
	};
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	status = "okay";
};

&mmc0 {
	vmmc-supply = <&reg_vcc_io>;
	bus-width = <4>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; /* PF6 */
	status = "okay";
};

&i2c0 {
	status = "okay";

	board_id: eeprom@50 {
		compatible = "atmel,24c02";
		reg = <0x50>;
		pagesize = <16>;
		read-only;
		vcc-supply = <&reg_vdd_3v3>;
	};

	ext_rtc: rtc@68 {
		compatible = "nxp,pcf8523";
		status = "okay";
		reg = <0x68>;
	};
};

&i2c1 {
	clock-frequency = <400000>;
	status = "okay";

	/* VE.Direct 3 */
	serial@4d {
		compatible = "nxp,sc16is760";
		reg = <0x4d>;
		clock-frequency = <18432000>;
		interrupt-parent = <&pio>;
		interrupts = <0 10 IRQ_TYPE_EDGE_FALLING>; /* PA10 */
	};
};

&pio {
	uart-reset-hog {
		gpio-hog;
		gpios = <0 6 GPIO_ACTIVE_LOW>;
		output-low;
		line-name = "uart-reset";
	};
};

&i2c2 {
	status = "okay";

	touchscreen@38 {
		compatible = "edt,edt-ft5446", "edt,edt-ft5406";
		reg = <0x38>;
		interrupt-parent = <&pio>;
		interrupts = <6 12 IRQ_TYPE_EDGE_FALLING>; /* PG12 */
		vcc-supply = <&reg_usb0_vbus>;
		iovcc-supply = <&reg_usb0_vbus>;
	};

	edid: eeprom@50 {
		compatible = "atmel,24c02";
		reg = <0x50>;
		pagesize = <16>;
		read-only;
		vcc-supply = <&reg_vdd_3v3>;
	};

	backlight@51 {
		compatible = "victronenergy,gxdisp-backlight";
		reg = <0x51>;
		default-on;
		default-brightness = <15>;
		vcc-supply = <&reg_usb0_vbus>;
	};
};

&r_pwm {
	status = "okay";
};

&spi0 {
	status = "okay";

	assigned-clocks = <&ccu CLK_SPI0>;
	assigned-clock-rates = <600000000>;
	cs-gpios = <&pio 2 3 GPIO_ACTIVE_LOW>;

	/* VE.CAN 1 */
	can0: can@0 {
		compatible = "microchip,mcp2518fd";
		reg = <0>;
		spi-max-frequency = <20000000>;
		clocks = <&can_clk>;
		interrupt-parent = <&pio>;
		interrupts = <0 20 IRQ_TYPE_LEVEL_LOW>; /* PA20 */
		microchip,rx-int-gpios = <&pio 0 21 GPIO_ACTIVE_LOW>; /* PA21 */
	};
};

&spi0_pins {
	pins = "PC0", "PC1", "PC2";
};

&spi1 {
	status = "okay";

	assigned-clocks = <&ccu CLK_SPI1>;
	assigned-clock-rates = <600000000>;
	cs-gpios = <&pio 0 13 GPIO_ACTIVE_LOW>;

	/* VE.CAN 2 */
	can1: can@0 {
		compatible = "microchip,mcp2518fd";
		reg = <0>;
		spi-max-frequency = <20000000>;
		clocks = <&can_clk>;
		interrupt-parent = <&pio>;
		interrupts = <0 8 IRQ_TYPE_LEVEL_LOW>; /* PA8 */
		microchip,rx-int-gpios = <&pio 0 3 GPIO_ACTIVE_LOW>; /* PA3 */
	};
};

&spi1_pins {
	pins = "PA15", "PA16", "PA14";
};

/* Console */
&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pa_pins>;
	status = "okay";
};

/* VE.Direct 2 */
&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pins>;
	status = "okay";
};

/* MK3 */
&uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
	status = "okay";
};

/* VE.Direct 1 */
&r_uart {
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&ohci0 {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&ohci1 {
	status = "okay";
};

&ohci2 {
	status = "okay";

	#address-cells = <1>;
	#size-cells = <0>;

	usb-serial@1 {
		compatible = "usb10c4,ea70";
		reg = <1>;

		#address-cells = <2>;
		#size-cells = <0>;

		/* VE.Direct 4 */
		usb_serial0: port@0 {
			reg = <0 1>;
		};

		/* VE.Direct 5 */
		usb_serial1: port@1 {
			reg = <1 1>;
		};
	};
};

&ehci3 {
	status = "okay";

	#address-cells = <1>;
	#size-cells = <0>;

	wireless-controller@1 {
		compatible = "usbbda,d723";
		reg = <1>;
	};
};

&usbphy {
	usb0_vbus-supply = <&reg_usb0_vbus>;
	usb1_vbus-supply = <&reg_usb0_vbus>;
	usb2_vbus-supply = <&reg_usb2_vbus>;
	usb3_vbus-supply = <&reg_usb3_vbus>;
	status = "okay";
};

&pio {
	gpio-line-names =
		"mkx_rst",
		"vebus_standby",
		"relay_1";
	gpio-line-numbers =
		<128>,		/* PE0 */
		<131>,		/* PE3 */
		<143>;		/* PE15 */
};
