#include "sun8i-h3-nanopi-neo-core.dtsi"

/ {
	aliases {
		nvmem0 = &board_id;
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
		serial3 = &uart3;
		ethernet0 = &emac;
		i2c0 = &i2c0;
		watchdog0 = &ext_wdt;
		watchdog1 = &wdt0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	ext_wdt: watchdog {
		compatible = "linux,wdt-gpio";
		gpios = <&pio 0 2 GPIO_ACTIVE_HIGH>; /* PA2 */
		hw_algo = "toggle";
		hw_margin_ms = <30000>;
		always-running;
	};

	can_clk: can-clk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <20000000>;
	};

	reg_usb1_vbus: regulator-usb1-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb1-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		gpio = <&pio 0 18 GPIO_ACTIVE_HIGH>; /* PA18 */
		enable-active-high;
	};

	reg_usb2_vbus: regulator-usb2-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb2-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		gpio = <&pio 0 7 GPIO_ACTIVE_HIGH>; /* PA7 */
		enable-active-high;
	};

	reg_usb3_vbus: regulator-usb3-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb3-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		gpio = <&pio 4 13 GPIO_ACTIVE_HIGH>; /* PE13 */
		enable-active-high;
	};
};

&pio {
	i2c0_gpio_pins: i2c0-gpio-pins {
		pins = "PA11", "PA12";
		function = "i2c0";
	};
};

&i2c0 {
	pinctrl-names = "default", "gpio";
	pinctrl-0 = <&i2c0_pins>;
	pinctrl-1 = <&i2c0_gpio_pins>;
	scl-gpios = <&pio 0 11 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>; /* PA11 */
	sda-gpios = <&pio 0 12 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>; /* PA12 */
	status = "okay";

	board_id: eeprom@50 {
		compatible = "atmel,24c02";
		reg = <0x50>;
		pagesize = <16>;
		read-only;
		vcc-supply = <&reg_vdd_sys_3v3>;
	};

	rtc1: rtc@68 {
		compatible = "nxp,pcf8523";
		reg = <0x68>;
	};
};

&spi0 {
	status = "okay";

	assigned-clocks = <&ccu CLK_SPI0>;
	assigned-clock-rates = <600000000>;

	can0: can@0 {
		compatible = "microchip,mcp2518fd";
		reg = <0>;
		spi-max-frequency = <10000000>;
		clocks = <&can_clk>;
		interrupt-parent = <&pio>;
		interrupts = <0 21 IRQ_TYPE_LEVEL_LOW>; /* PA21 */
		microchip,rx-int-gpios = <&pio 0 19 GPIO_ACTIVE_LOW>; /* PA19 */
	};
};

&emac {
	status = "okay";
};

&ehci1 {
	status = "okay";

	#address-cells = <1>;
	#size-cells = <0>;

	wireless-controller@1 {
		compatible = "usbbda,d723";
		reg = <1>;
	};
};

&ehci2 {
	status = "okay";
};

&ohci2 {
	status = "okay";
};

&ehci3 {
	status = "okay";
};

&ohci3 {
	status = "okay";
};

&rtc {
	status = "disabled";
};

&usbphy {
	usb1_vbus-supply = <&reg_usb1_vbus>;
	usb2_vbus-supply = <&reg_usb2_vbus>;
	usb3_vbus-supply = <&reg_usb3_vbus>;
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pa_pins>;
	status = "okay";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pins>;
};

&uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins>;
};

&mixer0 {
	status = "disabled";
};

&tcon0 {
	status = "disabled";
};
